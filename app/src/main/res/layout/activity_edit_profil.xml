<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".EditProfilActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:text="Edit Biodata" />
    <EditText
        android:id="@+id/edtProfilName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Nama"/>
    <Spinner
        android:id="@+id/spinnerProfilGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:entries="@array/jenis_kelamin"/>
    <EditText
        android:id="@+id/edtProfilEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Email"/>
    <EditText
        android:id="@+id/edtProfilTelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Telp"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/edtProfilAlmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Alamat"/>

    <Button
        android:id="@+id/btnEditSave"
        style="@style/FirebaseUI.Button.AccountChooser.MicrosoftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:fontFamily="casual"
        android:text="SIMPAN"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>